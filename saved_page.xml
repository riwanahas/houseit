<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Saved Title -->
    <TextView
        android:id="@+id/savedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Saved"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Saved Properties RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/savedRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/savedTitle"
        android:layout_above="@id/bottomNavBar"
        android:layout_marginHorizontal="16dp"
        android:paddingBottom="8dp"
        android:contentDescription="Saved Listings" />


    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#F8F8F8">

        <!-- Bottom Navigation Icons -->
        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:src="@drawable/ic_search_icon"
            android:contentDescription="@string/search"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:layout_margin="12dp" />

        <ImageView
            android:id="@+id/savedIcon"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@drawable/ic_saved"
            android:contentDescription="@string/saved"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:layout_margin="12dp" />

        <ImageView
            android:id="@+id/postIcon"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:src="@drawable/ic_post"
            android:contentDescription="Post"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:layout_margin="12dp" />



        <ImageView
            android:id="@+id/predictIcon"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:src="@drawable/ic_predict"
            android:contentDescription="@string/predict" />


        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile Icon"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:layout_margin="12dp" />
    </LinearLayout>

</RelativeLayout>
